<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE57373"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp">

    <!-- Blocked App Icon -->
    <ImageView
        android:id="@+id/ivBlockedAppIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/circle_background_white"
        android:contentDescription="Blocked App Icon"
        android:padding="16dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_block" />

    <!-- Warning Icon -->
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="Warning"
        android:src="@drawable/ic_warning"
        android:tint="#B71C1C" />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="App Blocked"
        android:textColor="#B71C1C"
        android:textSize="28sp"
        android:textStyle="bold" />

    <!-- Blocked App Name -->
    <TextView
        android:id="@+id/tvBlockedAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="App Name"
        android:textColor="#D32F2F"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Blocking Message -->
    <TextView
        android:id="@+id/tvBlockingMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@drawable/rounded_background_white"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:padding="20dp"
        android:text="NetGuard Kids has blocked this application.\n\nThis app has been restricted by your parent or guardian."
        android:textColor="#424242"
        android:textSize="16sp" />

    <!-- Go Home Button -->
    <Button
        android:id="@+id/btnGoHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_primary"
        android:fontFamily="sans-serif-medium"
        android:paddingHorizontal="32dp"
        android:paddingVertical="12dp"
        android:text="Go to Home Screen"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <!-- Auto redirect message -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="You will be redirected to home screen automatically"
        android:textColor="#757575"
        android:textSize="12sp"
        android:textStyle="italic" />

</LinearLayout>